{
    "name": "tab-sprinkle",
    "displayName": "Tab Sprinkle",
    "description": "close all opened files in a directory and all its subdirectories",
    "version": "2.1.0",
    "publisher": "YoRolling",
    "repository": {
        "type": "git",
        "url": "https://github.com/YoRolling/vscode-closefiles"
    },
    "author": {
        "name": "YoRolling",
        "email": "walldr2161ly@gmail.com",
        "url": "https://github.com/YoRolling"
    },
    "icon": "assets/icon.png",
    "engines": {
        "vscode": "^1.72.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:tab-sprinkle.sprinkletabs",
        "onCommand:tab-sprinkle.sprinkletabsdeeply"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "explorer/context": [
                {
                    "command": "tab-sprinkle.sprinkletabs",
                    "group": "2_workspace"
                },
                {
                    "command": "tab-sprinkle.sprinkletabsdeeply",
                    "group": "2_workspace"
                }
            ],
            "editor/title/context": [
                {
                    "command": "tab-sprinkle.sprinkletabs",
                    "group": "3_open"
                },
                {
                    "command": "tab-sprinkle.sprinkletabsdeeply",
                    "group": "3_open"
                }
            ],
            "editor/context": [
                {
                    "command": "tab-sprinkle.sprinkletabs",
                    "group": "9_cutcopypaste"
                },
                {
                    "command": "tab-sprinkle.sprinkletabsdeeply",
                    "group": "9_cutcopypaste"
                }
            ]
        },
        "commands": [
            {
                "command": "tab-sprinkle.sprinkletabs",
                "title": "Sprinkle Tabs",
                "category": "Tabs"
            },
            {
                "command": "tab-sprinkle.sprinkletabsdeeply",
                "title": "Sprinkle Tabs Deeply",
                "category": "Tabs"
            }
        ],
        "configuration": [
            {
                "title": "Sprinkle Tabs",
                "properties": {
                    "closefiles.closeAllTabGroup": {
                        "type": "boolean",
                        "default": false,
                        "description": "Close All TabGroup or ActiveTabGroup"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.72.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "eslint": "^8.24.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.8.4",
        "@vscode/test-electron": "^2.1.5"
    }
}